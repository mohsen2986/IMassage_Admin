<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IMassage_Admin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/avatar_color_7</item>
        <item name="colorPrimaryDark">@color/purple_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/default_teal_200</item>
        <item name="colorSecondaryVariant">@color/default_teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/iran_sans</item>
<!--        <item name="editTextStyle">@style/TextAppearance.AppCompat.TextView.bold_16</item>-->
    </style>

    <!--TEXT VIEW STYLES-->
    <style name="TextAppearance.AppCompat.TextView.normal_14" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppCompat.TextView.normal_16" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.TextView.bold_20" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/iran_sans_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.AppCompat.TextView.bold_16" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/iran_sans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Customize" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/iran_sans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Customize" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/iran_sans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Customize" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/iran_sans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


</resources>