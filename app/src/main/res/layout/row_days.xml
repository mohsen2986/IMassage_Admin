<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/row_days_container"
        android:layout_width="@dimen/width_120_136_144_200"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_800"
        app:strokeWidth="@dimen/margin_1_1_2_3"
        app:strokeColor="@color/overlay_dark_40"
        android:layout_marginStart="@dimen/margin_8_12_16_20"
        app:cardCornerRadius="@dimen/margin_8_16_16_32">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/row_days_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8_12_16_24"
                android:layout_marginBottom="@dimen/margin_8_12_16_24"
                android:fontFamily="@font/iran_sans_bold"
                android:textColor="@color/blue_50"
                android:textSize="@dimen/text_14_16_18_24"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="25 فروردین" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>